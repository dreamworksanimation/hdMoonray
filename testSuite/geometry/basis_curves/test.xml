	<executable>${oiiotool_path}oiiotool</executable>
	<args>${shot_tmp_dir}/${result} ${shot_tmp_dir}/${canonical} -a --warn ${error_threshold} --fail ${error_threshold} --diff --absdiff -o ${shot_tmp_dir}/${diff}</args>
      </command>
    </commands>
  </testcase>
</testsuite>
